{
  "extends": ["config:base", "group:allNonMajor"],
  "vulnerabilityAlerts": {
    "labels": ["security"]
  },
  "timezone": "Asia/Tokyo",
  "schedule": ["before 3am on Monday"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchPackagePatterns": ["eslint"],
      "labels": ["linting"]
    },
    {
      "matchPackagePatterns": ["@types"],
      "labels": ["@types"]
    },
    {
      "matchPackagePatterns": ["jest"],
      "labels": ["testing"]
    }
  ]
}
